        <Label fx:id="choose" layoutX="186.0" layoutY="46.0" text="Please sign in or create a new user" />
        <Label fx:id="error" layoutX="110.0" layoutY="81.0" text="Wrong username or password!" textFill="red" visible="false" />
        <Label fx:id="userCreation" layoutX="110.0" layoutY="81.0" text="User Created Successfully!" textFill="green" visible="false" />
    </children>

    <stylesheets>
        <URL value="@../css/WelcomeScreen.css" />
    </stylesheets>


</AnchorPane>
